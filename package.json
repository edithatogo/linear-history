{
  "name": "@linear-history/core",
  "version": "1.0.0",
  "description": "A tool that maps repository history to Linear via Linear's official MCP server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "linear-history": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/* tests/**/*",
    "lint:fix": "eslint src/**/* tests/**/* --fix",
    "format": "prettier --write \"src/**/*\" \"tests/**/*\"",
    "prepare": "husky install"
  },
  "keywords": [
    "linear",
    "mcp",
    "git",
    "repository",
    "history",
    "mapping",
    "project-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "yaml": "^2.4.2",
    "zod": "^3.23.8",
    "axios": "^1.6.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}